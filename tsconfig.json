{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dts",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "build",
    "dist",
    "./speccer.js",
    "scripts",
    "tests",
    "__tests__",
    "dts"
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dts",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "docs/.vitepress/**",
    "build",
    "dist",
    "tests/**",
    "scripts",
    "dts",
    "**/__tests__/**"
  ]
}

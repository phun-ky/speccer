svg.ph-speccer
  pointer-events none
  user-select none
  box-sizing border-box
  margin 0
  padding 0

#ph-speccer-svg
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  z-index 3

svg.ph-speccer .ph-speccer.path,
svg.ph-speccer .ph-speccer.circle
  color var(--ph-speccer-base-color,var(--accent-color, rgb(255, 58, 168)) )

.dissection
  height 1.5rem
  width 1.5rem
  display flex
  position absolute
  border-radius 100%
  background-color #d4397a
  color #fff
  font-weight 600
  align-items center
  justify-content center
  line-height 150%
  font-size 16px
  z-index 100000
  box-sizing: content-box;
  &:after
    content ""
    position absolute
    height 48px
    top 100%
    width 1px
    background-color #d4397a
    z-index 99999
  &.outline
    &.left
      &:after
        height 1px
        width 48px
        top 50%
        left 100%
    &.right
      &:after
        height 1px
        width 48px
        top 50%
        right 100%
    &.enclose
      border-radius 0
      background-color transparent
      color red
      border 1px solid #d4397a
      &.right
        &:after
          left calc(100% + 49px)
          right auto
        &:before
          left 100%
          right auto
      &.left
        &:after
          left calc(-1px - 48px)
          right auto
        &:before
          right 100%
          left auto
      &.top
        &:after
          top calc(-1px - 48px)
          bottom auto
        &:before
          bottom 100%
          top auto
      &.bottom
        &:after
          top calc(100% + 49px)
          bottom auto
        &:before
          top 100%
          bottom auto
    &.full
      border-radius 0
      background-color transparent
      color red
      border 1px solid #d4397a
      &.right
        border-left none
        &:after
          left calc(8px + 48px)
        &:before
          left 100%
      &.left
        border-right none
        &:after
          left calc(-8px - 48px)
        &:before
          right 100%
      &.top
        border-bottom none
        &:after
          top calc(-8px - 48px)
        &:before
          bottom 100%
      &.bottom
        border-top none
        &:after
          top calc(8px + 48px)
        &:before
          top 100%
    &.bottom
      &:after
        height 48px
        width 1px
        top calc(-100% - 24px)
        right 50%
  &.button-center
    &:after
      content ""
      position absolute
      height 48px
      top 100%
      width 1px
      background-color #d4397a
      z-index 99999
  &.button-outline
    &:after
      right 100%
  &.button-icon
    &:after
      left 100%
    &:before
      content ""
      position absolute
      height 1.5rem
      left calc(100% + 48px)
      width 1.5rem
      border 1px solid #d4397a
      z-index 99999


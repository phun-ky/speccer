.ph-speccer.speccer.a11y.shortcut-holder
  position absolute
  min-width 120px
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  grid-gap 0.5rem

.ph-speccer.speccer.a11y.shortcut-holder
  & kbd.ph-speccer.speccer.a11y.shortcut
    flex-shrink 0
    position relative
    background-color var(--ph-speccer-a11y-color-background)
    border-radius 0.5rem
    color var(--ph-speccer-color-text-light)
    font-family var(--ph-speccer-font-family)
    display inline-flex
    text-transform uppercase
    border 1pt solid var(--ph-speccer-a11y-color-background)
    font-size 0.875rem
    font-weight 500
    line-height 1.25rem
    justify-content center
    align-items center
    padding 0.5rem 0.75rem
    text-transform lowercase


